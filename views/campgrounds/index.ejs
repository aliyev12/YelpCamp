<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(campground => { %>
        <div class="col-md-3 col-sm-6">
            <div class="card mb-5">
                <img class="card-img-top" src="<%= campground.image %>" alt="" />
                <div class="card-body">
                    <h4 class="card-title"><%= campground.name %></h4>
                    <!-- <p class="card-text">Lorem</p>  -->
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-dark btn-block">More Info</a>
                </div>
            </div>
            <% campground.comments.forEach((comment, i) => { %>
                <p>Author: <%= comment.author %></p>
                <p>Text: <%= comment.text %></p>
                <hr>
           <% }) %>

        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
</div>