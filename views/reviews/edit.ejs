<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Change Review</h1>
        <div class="w-50 my-5 mx-auto">
            <form action="/campgrounds/<%= campground_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="rating">Leave a rating:</label>
                    <fieldset class="starability-basic form-group" id="rating">
                        <!-- 5 stars -->
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="first-rate5" name="review[rating]" value="5"
                                <% if (review.rating===5) { %> checked
                            <% } %> />
                            <label class="form-check-label" for="first-rate5" title="5 stars = Amazing">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(5) %>
                            </label>
                        </div>
                        <!-- 4 stars -->
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="first-rate4" name="review[rating]" value="4"
                                <% if (review.rating===4) { %> checked
                            <% } %>>
                            <label class="form-check-label" for="first-rate4" title="4 stars - Very Good">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(4) %>
                            </label>
                        </div>
                        <!-- 3 stars -->
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="first-rate3" name="review[rating]" value="3"
                                <% if (review.rating===3) { %> checked
                            <% } %>>
                            <label class="form-check-label" for="first-rate3" title="3 stars - Average">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(3) %>
                            </label>
                        </div>
                        <!-- 2 stars -->
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="first-rate2" name="review[rating]" value="2"
                                <% if (review.rating===2) { %> checked
                            <% } %>>
                            <label class="form-check-label" for="first-rate2" title="2 stars - Not good">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(2) %>
                            </label>
                        </div>
                        <!-- 1 stars -->
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="first-rate1" name="review[rating]" value="1"
                                <% if (review.rating===1) { %> checked
                            <% } %>>
                            <label class="form-check-label" for="first-rate1" title="1 stars - Terrible">
                                <span class="fa fa-star checked"></span>
                            </label>
                        </div>
                    </fieldset>
                </div>
                <!-- TEXT -->
                <div class="form-group">
                    <textarea class="form-control" type="text" name="review[text]" placeholder="Write a review for this campground..."
                        rows="5"><%= review.text %></textarea>
                </div>
                <!-- SUBMIT -->
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit a Review</button>
                </div>
            </form>
            <a class="btn btn-link" href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>